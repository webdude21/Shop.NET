@using Shop.Net.Resources
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - @GlobalConstants.ShopName</title>
        @RenderSection("MetaInformation", required: false);
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        @Html.Partial("_FacebookSdkPartial");
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink(GlobalConstants.ShopName, "Index", "Pages", new { area = string.Empty }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    @Html.Action("RenderCategoriesMenu", "CategoryMenu", new { area = string.Empty })
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("About", "About", "Pages", new { area = string.Empty }, null)</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Pages",  new { area = string.Empty }, null)</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer class="text-center text-success">
                <p >&copy; @DateTime.Now.Year - <a href="">@GlobalConstants.ShopName</a> - <a href="@GlobalConstants.GitHubLink">@GlobalConstants.Credits</a></p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/responsive-images")
        @RenderSection("scripts", false)
    </body>
</html>
